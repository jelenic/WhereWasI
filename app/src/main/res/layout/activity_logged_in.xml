<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedInActivity">

    <TextView
        android:id="@+id/CurrentLogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CURRENT LOG"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ViewLogsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/CurrentLogTextView"
        android:text="View Logs" />

    <Button
        android:id="@+id/StartNewLogBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ViewLogsBtn"
        android:text="Start New Log" />

    <Button
        android:id="@+id/QuickCheckInBtn"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/StartNewLogBtn"
        android:text="Quick Check In" />

    <Button
        android:id="@+id/QuickInputBtn"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/StartNewLogBtn"
        android:text="Quick Input" />


    <Button
        android:id="@+id/startServiceBtn"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/QuickCheckInBtn"
        android:text="START SERVICE" />

    <Button
        android:id="@+id/stopServiceBtn"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/QuickCheckInBtn"
        android:text="STOP SERVICE" />
    <EditText
        android:id="@+id/serviceTimeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopServiceBtn"
        android:inputType="numberPassword"
        android:hint="service time in seconds"/>
    <Button
        android:id="@+id/GetFileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serviceTimeET"
        android:text="CHOOSE FILE"/>

    <Button
        android:id="@+id/mailBackupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/GetFileBtn"
        android:text="MAIL BACKUP" />
    <Button
        android:id="@+id/mapBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mailBackupBtn"
        android:text="OPEN MAP"/>

    <EditText
        android:id="@+id/refreshET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapBtn"
        android:inputType="numberPassword"
        android:hint="map refresh time"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        <!-- my simple banner id:  ca-app-pub-3775405938489529/2344676714  -->
    </com.google.android.gms.ads.AdView>



</RelativeLayout>