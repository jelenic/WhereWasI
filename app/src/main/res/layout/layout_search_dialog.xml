<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="logName"/>

    <TextView
        android:id="@+id/dateFromTextView"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_alignTop="@+id/dateToTextView"
        android:hint="dateFrom" />

    <TextView
        android:id="@+id/dateToTextView"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameEditText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:hint="dateTo" />

</RelativeLayout>